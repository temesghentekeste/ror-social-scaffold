<div class="user-card">
  <div class="rounded-image">
    <%= gravatar_for user, size: 150 %>
  </div>
  <p class="user-header"><%= user.name%></p>
  <div class="friends-count">
    <%= friends_count(user)%>
    <%= mutual_friends_count(user)%>
    <%= posts_count(user)%>
  </div>
  <div class="user-footer">
    <%= button_to 'Send Request', friendships_path, params: {:id   => user.id }  %>
  </div>
</div>